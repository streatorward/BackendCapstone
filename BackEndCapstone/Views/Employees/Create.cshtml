@model BackEndCapstone.Models.Employee

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="field">
                <label class="label">First Name</label>
                <div class="control">
                    <input asp-for="FirstName" class="input is-rounded" type="text" placeholder="First Name">
                </div>
            </div>
            <div class="field">
                <label class="label">Last Name</label>
                <div class="control">
                    <input asp-for="LastName" class="input is-rounded" type="text" placeholder="Last Name">
                </div>
            </div>
            <div class="field">
                <label class="label">Phone Number</label>
                <div class="control">
                    <input asp-for="PhoneNumber" class="input is-rounded" type="text" placeholder="Phone Number">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}