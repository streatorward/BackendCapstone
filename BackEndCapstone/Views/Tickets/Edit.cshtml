@model BackEndCapstone.Models.Ticket
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TicketId" />
            <div class="field">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="input is-rounded" type="text" placeholder="Text input">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="field">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="textarea is-rounded" placeholder="Short Description of Ticket"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="field">
                <label asp-for="DepartmentId" class="control-label"></label>
                <div class="select is-rounded">
                    <select asp-for="DepartmentId" asp-items="ViewBag.DepartmentId"></select>
                </div>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="field">
                <label asp-for="EmployeeId" class="control-label"></label>
                <div class="select is-rounded">
                    <select asp-for="EmployeeId" asp-items="ViewBag.EmployeeId"></select>
                </div>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"/>
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsComplete" /> @Html.DisplayNameFor(model => model.IsComplete)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
